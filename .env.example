# Database Configuration
DATABASE_URL=your_value

# Redis Configuration
REDIS_URL=your_value

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_value
GITHUB_CLIENT_SECRET=your_value

# GitHub Webhook Configuration
GITHUB_WEBHOOK_SECRET=your_webhook_secret_value

# JWT Authentication
JWT_SECRET=your_value
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_SALT=your_random_hex_salt_value

# Platform Configuration
PLATFORM_DOMAIN=your_value
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins for CORS (falls back to APP_BASE_URL if not set)
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting Configuration
# Global rate limiting (applies to all routes except those with specific overrides)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Authentication endpoint rate limiting (stricter to prevent brute force attacks)
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW=1 minute

# WebSocket log streaming rate limiting (prevents abuse of real-time log connections)
WS_RATE_LIMIT_MAX=10
WS_RATE_LIMIT_WINDOW=1 minute

# Container Resource Limits
# Memory limit per container in MB (default: 512)
CONTAINER_MEMORY_LIMIT_MB=512
# CPU cores per container (default: 1.0)
CONTAINER_CPU_CORES=1.0

# Service Configuration
# Maximum log size stored in database in characters (default: 50000)
MAX_LOG_SIZE_CHARS=50000
# Metrics update interval in milliseconds (default: 5000 = 5 seconds)
METRICS_UPDATE_INTERVAL_MS=5000
# Status reconciliation interval in milliseconds (default: 30000 = 30 seconds)
STATUS_RECONCILIATION_INTERVAL_MS=30000
# SSE connection timeout in milliseconds (default: 1800000 = 30 minutes)
CONNECTION_TIMEOUT_MS=1800000

# Distributed Lock Configuration
# Default lock TTL for status updates in milliseconds (default: 10000 = 10 seconds)
STATUS_LOCK_TTL_MS=10000
# Lock TTL for status reconciliation in milliseconds (default: 5000 = 5 seconds)
STATUS_RECONCILIATION_LOCK_TTL_MS=5000
# Retry delay between lock acquisition attempts in milliseconds (default: 200)
LOCK_RETRY_DELAY_MS=200
# Random jitter added to retry delay in milliseconds (default: 100)
LOCK_RETRY_JITTER_MS=100

# Body Size Limits
# Global body size limit in MB (default: 10)
BODY_LIMIT_GLOBAL_MB=10
# Standard body size limit in MB (default: 1)
BODY_LIMIT_STANDARD_MB=1
# Small body size limit in KB (default: 100)
BODY_LIMIT_SMALL_KB=100

# Logging Configuration
# Log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL=info
# Enable request logging (default: true)
LOG_REQUESTS=true
# Enable response logging (default: true)
LOG_RESPONSES=true
