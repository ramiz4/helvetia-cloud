# Database Configuration
DATABASE_URL=your_value

# Redis Configuration
REDIS_URL=your_value

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_value
GITHUB_CLIENT_SECRET=your_value

# JWT Authentication
JWT_SECRET=your_value
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_SALT=your_random_hex_salt_value

# Platform Configuration
PLATFORM_DOMAIN=your_value
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3000
NODE_ENV=development

# Rate Limiting Configuration
# Global rate limiting (applies to all routes except those with specific overrides)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Authentication endpoint rate limiting (stricter to prevent brute force attacks)
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW=1 minute

# WebSocket log streaming rate limiting (prevents abuse of real-time log connections)
WS_RATE_LIMIT_MAX=10
WS_RATE_LIMIT_WINDOW=1 minute
