{
  "name": "shared-ui",
  "version": "1.0.0",
  "description": "Shared UI components and frontend utilities for Helvetia Cloud",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
