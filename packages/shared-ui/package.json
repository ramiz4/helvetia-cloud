    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.19.5",
    "@types/react": "^19",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^26.0.0",
    "lucide-react": "^0.562.0",
    "react": "^19.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "lucide-react": "^0.562.0"
  }
}
