generator client {
  provider = "prisma-client-js"
  output   = "../generated-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(uuid())
  githubId          String         @unique
  username          String
  avatarUrl         String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  /// @sensitive - GitHub OAuth access token. Handle securely.
  githubAccessToken String?
  services          Service[]
  refreshTokens     RefreshToken[]
}

model Service {
  id              String       @id @default(uuid())
  name            String       @unique
  repoUrl         String?
  branch          String       @default("main")
  buildCommand    String?
  startCommand    String?
  port            Int          @default(3000)
  status          String       @default("IDLE")
  userId          String
  envVars         Json?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  customDomain    String?
  staticOutputDir String?      @default("dist")
  type            String       @default("DOCKER")
  isPreview       Boolean      @default(false)
  prNumber        Int?
  deletedAt       DateTime?
  deleteProtected Boolean      @default(false)
  deployments     Deployment[]
  user            User         @relation(fields: [userId], references: [id])

  @@index([repoUrl, prNumber, isPreview])
  @@index([deletedAt])
}

model Deployment {
  id         String   @id @default(uuid())
  serviceId  String
  status     String   @default("QUEUED")
  logs       String?
  commitHash String?
  imageTag   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  service    Service  @relation(fields: [serviceId], references: [id])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)
  revokedAt DateTime?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}
