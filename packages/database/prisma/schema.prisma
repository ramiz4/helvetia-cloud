generator client {
  provider = "prisma-client-js"
  output   = "../generated-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(uuid())
  githubId          String         @unique
  username          String
  avatarUrl         String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  /// @sensitive - GitHub OAuth access token. Handle securely.
  githubAccessToken String?
  role              Role           @default(MEMBER)
  /// @sensitive - Hashed password for local auth (e.g. admin)
  password          String?
  services          Service[]
  projects          Project[]
  refreshTokens     RefreshToken[]
  organizations     OrganizationMember[]
}

enum Role {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model Organization {
  id        String               @id @default(uuid())
  name      String
  slug      String               @unique
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
  members   OrganizationMember[]
  projects  Project[]
}

model OrganizationMember {
  id             String       @id @default(uuid())
  organizationId String
  userId         String
  role           Role         @default(MEMBER)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
}

model Project {
  id           String        @id @default(uuid())
  name           String
  userId         String
  organizationId String?
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  environments Environment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([userId, name])
}

model Environment {
  id        String    @id @default(uuid())
  name      String    @default("Production")
  projectId String
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  services  Service[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([projectId, name])
}

model Service {
  id              String       @id @default(uuid())
  name            String
  repoUrl         String?
  branch          String       @default("main")
  buildCommand    String?
  startCommand    String?
  port            Int          @default(3000)
  status          String       @default("IDLE")
  userId          String
  environmentId   String?
  environment     Environment? @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  envVars         Json?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  customDomain    String?
  staticOutputDir String?      @default("dist")
  type            String       @default("DOCKER")
  isPreview       Boolean      @default(false)
  prNumber        Int?
  deletedAt       DateTime?
  deleteProtected Boolean      @default(false)
  deployments     Deployment[]
  user            User         @relation(fields: [userId], references: [id])

  @@unique([environmentId, name])
  @@index([repoUrl, prNumber, isPreview])
  @@index([deletedAt])
}

model Deployment {
  id         String   @id @default(uuid())
  serviceId  String
  status     String   @default("QUEUED")
  logs       String?
  commitHash String?
  imageTag   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  service    Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)
  revokedAt DateTime?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}

model FeatureFlag {
  id          String   @id @default(uuid())
  key         String   @unique
  name        String
  description String?
  enabled     Boolean  @default(false)
  // User segments for A/B testing (comma-separated user IDs or percentages)
  segments    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([key])
  @@index([enabled])
}
