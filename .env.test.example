# Test Environment Variables
# Copy this file to .env.test and fill in the values

# Database - Use test database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/helvetia_test

# Redis - Use test Redis instance
REDIS_URL=redis://localhost:6380

# JWT Secret - Can be any string for testing
JWT_SECRET=test-jwt-secret-change-me-in-production

# Encryption - Use test keys (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef
ENCRYPTION_SALT=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# GitHub OAuth (optional for most tests)
GITHUB_CLIENT_ID=test-client-id
GITHUB_CLIENT_SECRET=test-client-secret

# GitHub Webhook (for webhook integration tests)
GITHUB_WEBHOOK_SECRET=test-webhook-secret-12345

# API Base URL
APP_BASE_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# Domain (not needed for tests)
PLATFORM_DOMAIN=localhost
